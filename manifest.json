{
    "manifest_version": 2,
    "name": "OpenWebUI Connector",
    "version": "1.0",
    "description": "Connects Thunderbird to the OpenWebUI Docker container.",
    "permissions": [
      "activeTab",
      "storage",
      "http://localhost:8080/"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "brain-circuit-16.png",
        "48": "brain-circuit-32.png",
        "128": "brain-circuit-128.png"
      }
    }
  }
  